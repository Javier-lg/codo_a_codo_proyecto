<%- include ('../partials/head') %>

    <body>
        <%- include ('../partials/header.ejs') %>
            <main>
                <div class="text-center">
                    <div id="listado2">
                        <h1>CREA TU CUENTA</h1>
                    </div>
                    <div id="text3">
                        <h3>Completa el formulario para ser parte del mundo de los Funkos</h3>
                    </div>
                </div>
                <div class="product-card-container">
                    <form action="/auth/register" method="POST" class="form">
                        <div class="input-container">
                            <label for="name" value="nombre">Nombre:</label>
                            <input name="name" type="text" placeholder="John" id="name" class="input-data" autocomplete="given-name" required>
                        </div>
                        <br>
                        <div class="input-container">
                            <label for="last-name">Apellido:</label>
                            <input name="lastname" type="text" placeholder="Doe" id="last-name" class="input-data" required>
                        </div>
                        <br>
                        <div class="input-container">
                            <label for="Email">Email:</label>
                            <input name="email" type="email" placeholder="JohnDoe@correo.com" id="Email" class="input-data" autocomplete="given-name" required>
                        </div>
                        <br>
                        <div class="input-container">
                            <label for="password">Contraseña:</label>
                            <input name="password1" type="password" placeholder="⬤ ⬤ ⬤ ⬤ ⬤ ⬤ ⬤ ⬤ ⬤" id="password" class="input-data" required>
                        </div>
                        <br>
                        <div class="input-container">
                            <label for="repassword">Repita contraseña:</label>
                            <input name="password2" type="password" placeholder="⬤ ⬤ ⬤ ⬤ ⬤ ⬤ ⬤ ⬤ ⬤" id="repassword" class="input-data" required>
                        </div>
                        <br>
                        <button class="cart-button3">Registrar</button>
                        <input type="checkbox" name="" id="check" class="checkbox" required>
                        <span id="">Acepto <a href="#" class="shop-product-installments">Terminos y condiciones</a></span>
                        <br>
                    </form>
                </div>
                <div class="container mt-0">
                    <% if (typeof msg_error !== 'undefined' && msg_error) { %>
                        <div class="error-message">
                            <p class="text-center text-danger fs-5"><%= msg_error %></p>
                        </div>
                    <% } %>
                </div>
            </main>
            <%- include ('../partials/footer') %>
    </body>